<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ScrollViewIssue.MainPage">
    <StackLayout Spacing="10" Margin="0,40,0,0"> 
        <Button Text="Add new item" WidthRequest="250" Clicked="Button_Clicked"></Button>
    <Grid WidthRequest="250" HeightRequest="100">
    <ScrollView Orientation="Horizontal">
       <HorizontalStackLayout Spacing="10" BackgroundColor="Red" x:Name="horizontalLayout">
            <Label Text="Label1"></Label>
            <Label Text="Label2"></Label>
             <Label Text="Label3"></Label>
             <Label Text="Label4"></Label>
             <Label Text="Label5"></Label>
             <Label Text="Label6"></Label>
             <Label Text="Label7"></Label>
            
        </HorizontalStackLayout>
    </ScrollView>
    </Grid>
    </StackLayout>
</ContentPage>

